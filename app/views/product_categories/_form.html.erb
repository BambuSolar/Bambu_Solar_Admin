<%= form_for([@product_type,@product_category], html: {novalidate:'novalidate', class: 'form_validation'}) do |f| %>

    <div class="row clearfix">
      <div class="col-sm-12">
        <div class="form-group">
          <div class="form-line">
            <%= f.text_field :name,
                             class: 'form-control',
                             placeholder: 'Nombre',
                             required: '',
                             :'aria-required'=>'true',
                             :'aria-invalid'=>'true',
                             :autocomplete => :off,
                             maxlength:'150',
                             minlength:'5'
            %>
          </div>
        </div>
      </div>
    </div>

    <div class="row clearfix">
      <div class="col-sm-12">
        <div class="form-group">
          <div class="form-line">
            <%= f.number_field :order,
                               class: 'form-control',
                               placeholder: 'Orden',
                               required: 'required',
                               :'aria-required'=>'true',
                               min: 0,
                               step: 1
            %>
          </div>
        </div>
      </div>
    </div>

    <% if @product_category.id %>

        <ul class="list-group">

          <% @product_sub_types.each do |s_t| %>

              <li class="list-group-item">

                <p>
                  <input type="checkbox" id="sub_type_<%= s_t.id %>" value="<%= s_t.id %>" name="sub_types[]" <%= @product_category_product_sub_types.include?(s_t.id) ? 'checked': '' %> />
                  <label for="sub_type_<%= s_t.id %>"><%= s_t.name %></label>
                </p>

              </li>

          <% end %>

        </ul>

    <% end %>

    <div class="row">
      <div class="col-xs-6 col-sm-4">
        <button type="submit" class="btn btn-primary m-t-15 waves-effect btn-block teal">Guardar</button>
      </div>
      <div class="col-xs-6 col-sm-4">
        <%= link_to 'AtrÃ¡s', product_type_product_categories_path(@product_type), class: 'btn btn-default m-t-15 waves-effect btn-block' %>
      </div>
    </div>

<% end %>
