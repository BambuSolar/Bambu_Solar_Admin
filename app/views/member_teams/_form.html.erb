<%= form_for(@member_team, html: {novalidate:'novalidate', class: 'form_validation'}) do |f| %>

    <div class="row clearfix">
      <div class="col-sm-12">
        <div class="form-group form-float">
          <div class="form-line">
            <%= f.text_field :name,
                             class: 'form-control',
                             required: '',
                             :'aria-required'=>'true',
                             :'aria-invalid'=>'true',
                             maxlength:'100',
                             minlength:'5',
                             :autocomplete => :off
            %>
            <label class="form-label">Nombre</label>
          </div>
        </div>
      </div>
    </div>
    <div class="row clearfix">
      <div class="col-sm-12">
        <div class="form-group form-float">
          <div class="form-line">
            <%= f.text_area :description,
                            class: 'form-control',
                            required: '',
                            :'aria-required'=>'true',
                            :'aria-invalid'=>'true',
                            minlength:'20',
                            :autocomplete => :off
            %>
            <label class="form-label">Descripción</label>
          </div>
        </div>
      </div>
    </div>

    <div class="row clearfix">
      <div class="col-sm-12">
        <div class="form-group">

          <% unless @member_team.picture.nil?  %>
            <%= image_tag @member_team.picture.photo_url, style: 'width: 100%; max-width: 300px; height: auto;' %>
          <% end %>
            <div class="form-line input-group">

              <%= f.file_field :image, class:'file', style:'display:none' %>

                <span class="input-group-btn">
                    <button class="browse btn btn-primary" type="button">
                      <i class="material-icons">insert_photo</i>
                    </button>
                </span>
                <input type="text" class="form-control" disabled placeholder="Seleccione un imágen" value="<%= (@member_team.picture.nil? ? '' : @member_team.picture.photo_identifier ) %>">
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-6 col-sm-4">
        <button type="submit" class="btn btn-primary m-t-15 waves-effect btn-block teal">Guardar</button>
      </div>
      <div class="col-xs-6 col-sm-4">
        <%= link_to 'Atrás', member_teams_path, class: 'btn btn-default m-t-15 waves-effect btn-block' %>
      </div>
    </div>

<% end %>
