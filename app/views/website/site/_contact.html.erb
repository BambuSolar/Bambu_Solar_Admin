
<div class="row">
  <div class="col-sm-12">
    <div class="contact_contant sections">
      <div class="head_title text-center">

        <h2>Contactanos</h2>

        <div class="subtitle">

        </div>

      </div><!-- End off Head_title -->

      <div class="row contact_info_content">

        <div class="col-xs-12 col-md-6">
          <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-12">
              <div class="main_contact_info">
                <div class="row">
                  <div class="">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                      <div class="single_contact_info">
                        <div class="single_info_text">
                          <h3>Teléfonos</h3>
                          <div class="row">

                            <% @contact_info.telepones.split(',').to_a.each do |t| %>

                                <div class="col-sm-12 text-center">
                                  <div class="col-xs-12 visible-xs-block">
                                    <a class="text_telephone" href="whatsapp://send?phone=<%= t.to_s.gsub(' ','').gsub('-','').gsub('(','').gsub(')','') %>&text=Hola, tengo una consulta">
                                      <i class="fa fa-whatsapp" aria-hidden="true"></i>
                                      <%= t %>
                                    </a>
                                  </div>
                                  <div class="col-sm-12 hidden-xs text-center">
                                    <h4 class="text-lowercase">
                                      <i class="fa fa-whatsapp" aria-hidden="true"></i>
                                      <%= t %>
                                    </h4>
                                  </div>
                                </div>

                            <% end %>


                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-6">
                      <div class="single_contact_info">
                        <div class="single_info_text">
                          <h3>Correo electrónico</h3>
                          <div class="row">

                            <% @contact_info.emails.split(',').to_a.each do |e| %>

                                <div class="col-xs-12 col-sm-12 text-center">
                                  <a href="mailto:<%= e %>?subject=Consulta" class="text-lowercase text_email">
                                      <i class="fa fa-envelope-o" aria-hidden="true"></i>
                                      <%= e %>
                                    </a>
                                </div>

                            <% end %>

                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                      <div class="single_contact_info">
                        <div class="single_info_text">
                          <h3>Facebook</h3>
                          <div class="row">
                            <div class="col-sm-12 text-center">
                              <a href="https://www.facebook.com/bambuenergia">
                                <h4 class="text-lowercase">
                                  <i class="fa fa-facebook" aria-hidden="true"></i>
                                  www.facebook.com/bambuenergia
                                </h4>
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                      <div class="single_contact_info">
                        <div class="single_info_text">
                          <h3>Tienda Mercado Libre</h3>
                          <a target="_blank" href="http://listado.mercadolibre.com.ar/_CustId_227447839">
                            <h4 class="text-center text-lowercase">
                              listado.mercadolibre.com.ar/_CustId_227447839
                            </h4>
                          </a>
                        </div>
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-12">
                      <div class="single_contact_info">
                        <div class="single_info_text">
                          <h3>Ubicación</h3>
                          <h4 class="text-center">
                            <%= @contact_info.address_text %>
                          </h4>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 iframe-full-container">
          <%= @contact_info.iframe_map.html_safe %>
        </div>

      </div>


    </div>
  </div>
</div>