    <div class="col-xs-12 col-sm-6">
      <h1 class="title"></h1>
      <p class="description"></p>
      <div class="row buttons">
        <div class="col-xs-6">
          <p class="price modal-contact-btn btn btn-block">

          </p>
        </div>
        <div class="col-xs-6">
          <button type="button" class="modal-contact-btn btn btn-block">Consultar</button>
        </div>
      </div>
