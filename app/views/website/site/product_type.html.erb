    <div class="col-xs-12">
      <h1 class="title2">Características</h1>
    </div>
    <div class="col-xs-12">
      <div class="description_detail">

      </div>
    </div>

  </div>
</div>

<div id="modal-contact" class="iziModal">
  <%= render 'contact' %>
</div>

<link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet" async="true">

