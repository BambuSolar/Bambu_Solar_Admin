<!doctype html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Bambú Energía en Movimiento</title>
  <%= stylesheet_link_tag  'website_product_type', media: 'all', 'data-turbolinks-track' => false %>
  <meta name="description" content="">
  <link rel="icon" type="image/png" href="<%= path_to_image('website/favicon.png')%>">
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body data-spy="scroll" data-target=".navbar-collapse">

<div class='preloader'>
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="row">
      <div class="col-xs-12 sun">
        <img src="<%= path_to_image('website/loader/sun.png')%>" alt="" width="100px;">
      </div>
      <div class="col-xs-12 lightbulb">
        <img src="<%= path_to_image('website/loader/lightbulb.gif')%>" alt="" width="100px;">
      </div>
    </div>
  </div>
</div>


<div class="culmn">
  <header id="main_menu" class="header navbar-fixed-top">

    <div class="main_menu_bg">
      <div class="container">
        <div class="row">
          <div class="nave_menu">
            <nav class="navbar navbar-default">
              <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed visible-xs-block" data-toggle="collapse" data-target="#mobile_header_menu" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand" href="#home">
                    <img src="<%= path_to_image('website/isologotipo/isologotipo.png')%>"/>
                  </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->

                <div class="collapse navbar-collapse " id="mobile_header_menu">

                  <ul class="nav navbar-nav navbar-right">
                    <li>
                      <a href="/">
                        <i class="fa fa-home hidden-xs"></i> Inicio
                      </a>
                    </li>

                    <% @product_types.each do |p_t| %>
                    <li class="visible-xs-block">
                      <a href="./<%= I18n.transliterate(p_t.name.split(' ')[0].to_s.downcase) %>.html"
                         <% if p_t.id == @product_type.id %>
                            class="active"
                         <% end %>
                      >
                        <%= p_t.name.scrub %>
                      </a>
                    </li>
                    <% end %>
                  </ul>

                </div>

              </div>
            </nav>
          </div>
        </div>

      </div>

    </div>
  </header> <!--End of header -->


  <div id="slider_type_products" class="hidden-xs">
    <div class="row" >
      <% @product_types.each do |p_t| %>
          <a href="./<%= I18n.transliterate(p_t.name.split(' ')[0].to_s.downcase) %>.html"
             class="col-xs-4 <%= p_t.id == @product_type.id ? 'active' : '' %>"
             id="type_product_<%= I18n.transliterate(p_t.name.downcase.gsub(' ', '_')) %>">
            <span style="background-image: url('<%= p_t.picture.photo %>')"></span>
            <p class="title"><%= p_t.name.scrub %></p>
          </a>
      <% end %>
    </div>
  </div>

  <section id="products" class="container text-center">

    <div class="head_title text-center">
      <h2><%= @product_type.name.capitalize %></h2>
      <div class="subtitle">
        Ideales para mantener una agradable temperatura de su piletas o picina durante todo el año.
      </div>
      <div class="separator"><img src="<%= path_to_image('website/isologotipo/logo.jpg')%>"></div>
    </div><!-- End off Head_title -->

    <div class="row">
      <% @products.each do |p| %>
          <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
            <div class="card  product">
              <a href="#product_modal_<%= p.id %>" class="product_modal_btn" id="product_modal_<%= p.id %>_btn">
                <div class="image" style="background-image: url(<%= p.picture.photo %>);"></div>
                <h4 class="title text-capitalize"><%= p.name %></h4>
                <p class="description text-overflow"></p>
                <p class="price"> $ <%= p.price %> </p>
              </a>
            </div>
          </div>
      <% end %>
    </div>

  </section>


  <% @products.each do |p| %>
    <div id="product_modal_<%= p.id %>">
      <!--THIS IS IMPORTANT! to close the modal, the class name has to match the name given on the ID -->
      <div  id="btn-close-modal" class="close-product_modal_<%= p.id %>">
        <img class="closebt" src="<%= path_to_image('website/closebt.svg')%>">
      </div>

      <div class="modal-content">
        <div class="col-xs-12 col-sm-6">
          <div class="pictures">
          <%= image_tag p.picture.photo_url, width: '100%', height: 'auto' %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <h1 class="title"><%= p.name %></h1>
          <p class="description"><%= p.description %></p>
          <div class="col-xs-6">
            <h3>$ <%= number_with_precision(p.price, precision: 2) %></h3>
          </div>
          <div class="col-xs-6">

          </div>

        </div>

        <div class="col-xs-12">
          <div class="description_detail">
            <%= simple_format p.description_detail %>
          </div>
        </div>

      </div>
    </div>
  <% end %>


  <!-- START SCROLL TO TOP  -->

  <div class="scrollup">
    <a href="#"><i class="fa fa-chevron-up"></i></a>
  </div>

</div>

<%= Gon::Base.render_data %>

<%= javascript_include_tag 'website_product_type', 'data-turbolinks-track' => false %>

</body>

</html>
