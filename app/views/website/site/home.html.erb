  <section class="who_we_are" id="who_we_are">
    <div class="container-fluid">
      <div class="row">

        <div class="head_title text-center">
          <h3>
            <%= @home_website_config.welcome_message %>
          </h3>
          <div class="separator margin-top-80">
            <img src="<%= path_to_image('website/isologotipo/logo.jpg')%>">
          </div>
        </div><!-- End off Head_title -->
