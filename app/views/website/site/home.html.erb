<!doctype html>

<head>
  <% if @environment == 'prod' %>

    <%= render 'google_tag_head' %>

  <% end %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Bambú Energía en Movimiento</title>
  <%= stylesheet_link_tag  'website_home', media: 'all'%>
  <meta name="description" content="">
  <link rel="icon" type="image/x-icon" href="<%= path_to_image('website/favicon.ico')%>" />
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body data-spy="scroll" data-target=".navbar-collapse">
<% if @environment == 'prod' %>

    <%= render 'google_tag_body' %>

<% end %>
<div class='preloader'>
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="row">
      <div class="col-xs-12 sun">
        <img src="<%= path_to_image('website/loader/sun.png')%>" alt="" width="100px;">
      </div>
      <div class="col-xs-12 lightbulb">
        <img src="<%= path_to_image('website/loader/lightbulb.gif')%>" alt="" width="100px;">
      </div>
    </div>
  </div>
</div>

<div class="culmn">

  <header id="main_menu" class="header navbar-fixed-top">
    <div class="main_menu_bg">
      <div class="container">
        <div class="row">
          <div class="nave_menu">
            <nav class="navbar navbar-default">
              <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand" href="#home">
                    <img src="<%= path_to_image('website/isologotipo/isologotipo.png')%>"/>
                  </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                  <ul class="nav navbar-nav navbar-right">
                    <li><a href="#home">Inicio</a></li>
                    <li><a href="#products">Productos</a></li>
                    <li><a href="#contact">Contacto</a></li>
                  </ul>

                </div>

              </div>
            </nav>
          </div>
        </div>

      </div>

    </div>
  </header> <!--End of header -->

  <!--home Section -->
  <section id="home" class="home" data-wow-duration="2s" data-wow-dealy="1.5s">
    <div class="overlay">
      <div class="home_skew_border">

        <h4>Ingeniería Renovable en Mendoza, Argentina</h4>

        <div class="main_home wow fadeInUp text-center" data-wow-duration="1s">

          <h1>
            <img src="<%= path_to_image('website/isologotipo/isologotipo.png')%>"/>
          </h1>

        </div>

        <div class="ribbons">
          <div class="separator5"></div>
          <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 ">
            <div class="row">
              <div class="col-xs-4 ribbon">
                <div class="image">
                  <img src="<%= path_to_image('website/ribbon/Engineering.png')%>" width="auto" height="auto">
                </div>
                <div class="col-xs-12">
                  Ingeniería
                </div>
              </div>
              <div class="col-xs-4 ribbon">
                <div class="image">
                  <img src="<%= path_to_image('website/ribbon/Experience.png')%>" width="auto" height="auto">
                </div>
                <div class="col-xs-12">
                  Experiencia
                </div>
              </div>
              <div class="col-xs-4 ribbon">
                <div class="image">
                  <img src="<%= path_to_image('website/ribbon/Payments.png')%>" width="auto" height="auto">
                </div>
                <div class="col-xs-12">
                  Facilidades de Pago
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="scrooldown">
          <a href="#products"><i class="fa fa-angle-down"></i></a>
        </div>
      </div>
    </div>
  </section><!--End of home section -->

  <!-- Product Section -->
  <section id="products" class="product">
    <div class="container-fluid">
      <div class="row">

      </div>
      <div class="row">
        <div class="main_product sections">

          <div class="head_title text-center">
            <h3>
              ¡Gracias por visitarnos! Somos una empresa mendocina dedicada a las energías renovables. Desde
              el 2014 trabajamos cada día para que nuestra provincia sea más verde. Nuestro objetivo es ofrecer
              soluciones personalizadas económicas y sustentables.
            </h3>
            <div class="separator margin-80">
              <img src="<%= path_to_image('website/isologotipo/logo.jpg')%>">
            </div>
            <h2 class="margin-top-20">¡Conocé nuestros productos!</h2>
          </div><!-- End off Head_title -->

          <% product_time_animation = 1.5 %>

          <div class="main_product_content">

            <% @product_types.each do |p_t| %>

                <div class="col-sm-12 col-md-4 wow fadeInUp" data-wow-duration="<%= product_time_animation%>s" data-wow-dealy="1.5s">
                  <div class="single_product_area textwhite">
                    <div class="row">
                      <div class="col-xs-6 no-padding">
                        <div class="single_product_img">
                          <% if p_t.picture.nil? %>
                              <img src="<%= path_to_image('website/no-image.png')%>">
                          <% else %>
                              <%= image_tag p_t.picture.photo_url %>
                          <% end %>
                        </div>
                      </div>
                      <div class="col-xs-6 no-padding">
                        <div class="single_product_text s_b_left">
                          <h3><%= p_t.name %></h3>
                          <div class="separator2"></div>
                          <p></p>

                          <a href="productos/<%= I18n.transliterate(p_t.name.split(' ')[0].to_s.downcase) %>" class="read_more">Ver Productos</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <% product_time_animation += 0.5 %>

            <% end %>

          </div>

        </div>
      </div>
    </div><!-- End off container -->
  </section><!-- End off product Section -->


  <section id="sky" class="sky wow fadeIn" data-wow-duration="2s" data-wow-dealy="1.5s">
    <div id="sun">
      <div id="rings">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>
    <div id="clouds" class="clouds"></div>
  </section>


  <!-- Team Section -->
  <section id="team" class="team fadeIn">
    <div class="main_team_area">
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <div class="head_title text-center">
              <h2 class="text-title">
                Contanos cual es tu proyecto
                <br/>
                Sabemos de energía solar y queremos compartirlo
              </h2>
            </div><!-- End off Head_title -->

          </div>
        </div>
      </div>
    </div><!-- End of container -->
  </section><!-- End off Team Section -->

  <section id="ourWork" class="ourWork fadeIn">
    <div class="ourWorkSlider">
      <% @ourworks.each do |ow|%>
          <div class="item">
            <div class="content">
              <div class="image" style="background-image: url('<%= ow.picture.photo_url %>');"></div>
              <% if ow.title.to_s.size > 0 %>
                <p><%= ow.title.titlecase %></p>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </section>
  <section id="contact" class="contact">
    <div class="container">
      <%= render 'contact' %>
    </div>
  </section><!-- End of contact section -->

  <!--Footer section-->
  <section class="footer">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">

          <div class="main_footer">
            <div class="row">

              <div class="col-sm-12 col-xs-12">
                <div class="flowus">
                  <a href=""><i class="fa fa-facebook"></i></a>
                  <a href=""><i class="fa fa-youtube"></i></a>
                </div>
              </div>

              <div class="col-sm-6 col-xs-12">
                <div class="copyright_text"></div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>

  </section><!-- End off footer Section-->

</div>
<!-- START SCROLL TO TOP  -->

<div class="scrollup">
  <a href="#"><i class="fa fa-chevron-up"></i></a>
</div>


<%= javascript_include_tag 'website_home'%>

</body>

</html>
