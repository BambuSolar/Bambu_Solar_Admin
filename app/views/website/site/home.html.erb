  <style type="text/css">

    .preloader {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #fefefe;
      z-index: 99999;
      height: 100%;
      width: 100%;
      overflow: hidden !important;
    }

    .preloader > div{
      position: absolute;
      top: 50%;
      margin-top: -60px;
    }

    .preloader > div > div{
      text-align: center;
    }

    .preloader .lightbulb{
      top: -103px;
      animation: pulse2 5s infinite linear;
      opacity: 1;
    }

    .preloader .sun{
      animation: pulse 5s infinite linear;
      opacity: 0;
    }

    .preloader .sun img{
      animation: rotateR 12s infinite linear;
    }

    @keyframes pulse {
      0% {

        opacity: 0;

      }
      50% {

        opacity: 1;

      }
    }

    @keyframes pulse2 {
      0% {

        opacity: 1;

      }
      50% {

        opacity: 0;

      }
    }
    img {
      -moz-user-select: none;
      -webkit-user-select: none;
      -ms-user-select: none;
      user-select: none;
      -webkit-user-drag: none;
      user-drag: none;
    }
  </style>
  <% if @environment == 'prod' %>

      <%= render 'google_tag_head' %>

  <% end %>

</head>
<body data-spy="scroll" data-target=".navbar-collapse">
<% if @environment == 'prod' %>

