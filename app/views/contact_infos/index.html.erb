<div class="block-header">
  <ol class="breadcrumb breadcrumb-col-teal">
    <li>
      <a href="/">
        <i class="material-icons">home</i>
      </a>
    </li>
    <li class="active">Información de Contacto</li>
  </ol>
  <h1>
    Información de Contacto
  </h1>
</div>
<div class="row clearfix">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="body">

        <div class="row">
          <div class="col-md-6 col-sm-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="list-group-item-heading">Teléfonos</h4>
              </div>
              <div class="panel-body">
                <ul>
                  <% @contact_info.telephones.split(',').to_a.each do |t| %>
                      <li><%= t %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-sm-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="list-group-item-heading">Emails</h4>
              </div>
              <div class="panel-body">
                <ul>
                  <% @contact_info.emails.split(',').to_a.each do |e| %>
                      <li><%= e %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 col-sm-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="list-group-item-heading">Link de Facebook</h4>
              </div>
              <div class="panel-body">
                <%= @contact_info.facebook_link %>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-sm-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="list-group-item-heading">Link de MercadoLibre</h4>
              </div>
              <div class="panel-body">
                <%= @contact_info.mercadolibre_link %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12 col-sm-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="list-group-item-heading">Dirección</h4>
              </div>
              <div class="panel-body">
                <%= @contact_info.address_text %>
              </div>
            </div>
          </div>

          <div class="col-md-12 col-sm-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="list-group-item-heading">Mapa</h4>
              </div>
              <div class="panel-body">
                <div class="map-container">
                <%= @contact_info.iframe_map.html_safe %>
                </div>
              </div>
            </div>
          </div>

        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-3">
            <%= link_to 'Editar Configuración', edit_contact_info_path, class:'btn btn-primary waves-effect btn-block teal' %>
          </div>
        </div>

      </div>


    </div>
  </div>
</div>

