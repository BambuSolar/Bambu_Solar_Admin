<%= form_for([@product_type,@product], html: {novalidate:'novalidate', class: 'form_validation'}) do |f| %>

    <div class="row clearfix">
      <div class="col-sm-12">
        <div class="form-group">
          <div class="form-line">
            <%= f.text_field :name,
                             class: 'form-control',
                             placeholder: 'Nombre',
                             required: '',
                             :'aria-required'=>'true',
                             :'aria-invalid'=>'true',
                             maxlength:'100',
                             minlength:'5'
            %>
          </div>
        </div>
      </div>
    </div>

    <div class="row clearfix">
      <div class="col-sm-12">
        <div class="form-group">
          <div class="form-line">
            <%= f.text_area :description,
                            class: 'form-control',
                            placeholder: 'DescripciÃ³n',
                            required: '',
                            :'aria-required'=>'true',
                            :'aria-invalid'=>'true',
                            minlength:'20'
            %>
          </div>
        </div>
      </div>
    </div>

    <div class="row clearfix">
      <div class="col-sm-12">
        <div class="form-group">
          <div class="form-line">
            <%= f.number_field :price,
                               class: 'form-control',
                               placeholder: 'Precio',
                               required: '',
                               :'aria-required'=>'true',
                               min: 0
            %>
          </div>
        </div>
      </div>
    </div>

    <div class="row clearfix">
      <div class="col-sm-12">
        <div class="form-group">
          <%= f.check_box :enabled%>
          <label for="product_enabled">Habilitado</label>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-6 col-sm-2">
        <button type="submit" class="btn btn-primary m-t-15 waves-effect btn-block teal">Guardar</button>
      </div>
      <div class="col-xs-6 col-sm-2">
        <%= link_to 'AtrÃ¡s', @product_type, class: 'btn btn-default m-t-15 waves-effect btn-block' %>
      </div>
    </div>
<% end %>
