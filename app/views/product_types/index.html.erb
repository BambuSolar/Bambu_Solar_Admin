<div class="block-header">
  <ol class="breadcrumb breadcrumb-col-teal">
    <li>
      <a href="/">
        <i class="material-icons">home</i>
      </a>
    </li>
    <li class="active">Tipo de Productos</li>
  </ol>
  <h1>
    Tipos de Producto
  </h1>
</div>
<div class="row clearfix">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="body table-responsive">
        <% if @product_types.size > 0 %>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Nombre</th>
            <th style="width: 160px;"></th>
          </tr>
          </thead>

          <tbody>
          <% @product_types.each do |product_type| %>
              <tr>
                <td><%= product_type.name %></td>
                <td>
                  <%= link_to product_type, class: 'btn btn-default' do %>
                      <i class="material-icons">visibility</i>
                  <% end %>
                  <%= link_to edit_product_type_path(product_type), class: 'btn btn-default'  do %>
                      <i class="material-icons">create</i>
                  <% end %>
                  <%= link_to product_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  do %>
                      <i class="material-icons">delete</i>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <% else %>
            <div class="alert alert-info margin-0 text-center">
              No existe ning√∫n tipo de producto cargado en el sistema
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-3">
    <%= link_to 'Nuevo Tipo de Producto', new_product_type_path, class:'btn btn-primary waves-effect btn-block teal' %>
  </div>
</div>