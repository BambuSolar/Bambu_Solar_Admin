<div class="block-header">
  <ol class="breadcrumb breadcrumb-col-teal">
    <li>
      <a href="/">
        <i class="material-icons">home</i>
      </a>
    </li>
    <li class="active">Nuestro Trabajo</li>
  </ol>
  <h1>
    Nuestro Trabajo
  </h1>
</div>
<!-- Input -->
<div class="row clearfix">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="body table-responsive">
        <% if @ourworks.size > 0 %>

            <div class="row grid">

              <% @ourworks.each do |ourwork| %>

                  <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 grid-item  ">
                    <div>
                      <%= image_tag ourwork.picture.photo_url, class: 'our_work'%>
                      <% if ourwork.title.size() > 0 %>
                          <p>
                            <%= ourwork.title %>
                          </p>
                      <% end %>
                      <div class="btn-group btn-group-justified buttons">
                        <%= link_to edit_ourwork_path(ourwork), class: 'btn btn-default'  do %>
                            <i class="material-icons">create</i>
                        <% end %>
                        <%= link_to ourwork, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  do %>
                            <i class="material-icons">delete</i>
                        <% end %>
                      </div>
                    </div>
                  </div>

              <% end %>

            </div>

        <% else %>
            <div class="alert alert-info margin-0 text-center">
              No existe ninguna imágen sobre nuestro trabajo cargado en el sistema
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-3">
    <%= link_to 'Nuevo Imágen', new_ourwork_path, class:'btn btn-primary waves-effect btn-block teal' %>
  </div>
</div>