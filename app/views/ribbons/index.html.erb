<div class="block-header">
  <ol class="breadcrumb breadcrumb-col-teal">
    <li>
      <a href="/">
        <i class="material-icons">home</i>
      </a>
    </li>
    <li class="active">Ribbons</li>
  </ol>
  <h1>
    Ribbons
  </h1>
</div>
<div class="row clearfix">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="body table-responsive">
        <% if @ribbons.size > 0 %>
            <table class="table table-striped">
              <thead>
              <tr>
                <th>Nombre</th>
                <th style="width: 120px;"></th>
              </tr>
              </thead>

              <tbody>
              <% @ribbons.each do |ribbon| %>
                  <tr>
                    <td>
                      <% unless ribbon.picture.nil? %>
                          <%= image_tag ribbon.picture.photo_url, width: '36px', height: '36px' %>
                      <% end %>
                      <%= ribbon.text %>
                    </td>
                    <td>
                      <%= link_to edit_ribbon_path(ribbon), class: 'btn btn-default'  do %>
                          <i class="material-icons">create</i>
                      <% end %>
                      <%= link_to ribbon, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  do %>
                          <i class="material-icons">delete</i>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
        <% else %>
            <div class="alert alert-info margin-0 text-center">
              No existe ning√∫n ribbon cargado en el sistema
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-3">
    <%= link_to 'Nuevo Ribbon', new_ribbon_path, class:'btn btn-primary waves-effect btn-block teal' %>
  </div>
</div>
