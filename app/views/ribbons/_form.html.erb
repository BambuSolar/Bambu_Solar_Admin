          </ul>
        </div>
    <% end %>

    <div class="row clearfix">
      <div class="col-sm-12">
        <div class="form-group">
          <div class="form-line">
            <%= f.text_field :text,
                             class: 'form-control',
                             placeholder: 'Texto',
                             required: '',
