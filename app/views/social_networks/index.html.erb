<div class="block-header">
  <ol class="breadcrumb breadcrumb-col-teal">
    <li>
      <a href="/">
        <i class="material-icons">home</i>
      </a>
    </li>
    <li class="active">Redes Sociales</li>
  </ol>
  <h1>
    Redes Sociales
  </h1>
</div>
<div class="row clearfix">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
      <div class="body table-responsive">
        <% if @social_networks.size > 0 %>
            <table class="table table-striped">
              <thead>
              <tr>
                <th>Nombre</th>
                <th style="width: 120px;"></th>
              </tr>
              </thead>

              <tbody>
              <% @social_networks.each do |social_network| %>
                  <tr>
                    <td>
                      <i class="fa <%= social_network.icon %> icon"></i>
                      <%= link_to social_network.name, social_network.link %>
                    </td>
                    <td>
                      <%= link_to edit_social_network_path(social_network), class: 'btn btn-default'  do %>
                          <i class="material-icons">create</i>
                      <% end %>
                      <%= link_to social_network, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  do %>
                          <i class="material-icons">delete</i>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
        <% else %>
            <div class="alert alert-info margin-0 text-center">
              No existe ninguna red social cargada en el sistema
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-3">
    <%= link_to 'Nueva Red Social', new_social_network_path, class:'btn btn-primary waves-effect btn-block teal' %>
  </div>
</div>

